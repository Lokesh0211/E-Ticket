<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".Fragments.BookTicketFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK TICKET"
        android:id="@+id/book_ticket"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer1"
        android:layout_marginTop="50dp"
        android:layout_below="@id/book_ticket">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FULL NAME:"
            android:id="@+id/name"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:id="@+id/ED_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:background="#70D1CFCF"
            android:hint="Enter Full Name"
            android:padding="10dp"
            android:textColorHint="#50FFFFFF" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layer1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE NUMBER:"
            android:id="@+id/mobile_number"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ED_mobile_number"
            android:hint="Enter Mobile Number"
            android:textColorHint="#50FFFFFF"
            android:layout_marginStart="30dp"
            android:background="#70D1CFCF"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layer2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" STARTING:"
            android:id="@+id/starting_point"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ED_starting"
            android:hint="Source Station"
            android:textColorHint="#50FFFFFF"
            android:layout_marginStart="30dp"
            android:background="#70D1CFCF"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layer3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESTINATION:"
            android:id="@+id/destination"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ED_destination"
            android:hint="Destination Station"
            android:textColorHint="#50FFFFFF"
            android:layout_marginStart="30dp"
            android:background="#70D1CFCF"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer5"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layer4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AADHAR NUMBER:"
            android:id="@+id/aadharNumber"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ED_aadhar_number"
            android:hint="Enter Aadhar Number"
            android:textColorHint="#50FFFFFF"
            android:layout_marginStart="30dp"
            android:background="#70D1CFCF"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layer6"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layer5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOB(dd/mm/yyyy):"
            android:id="@+id/DOB"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ED_age"
            android:hint="Enter DOB"
            android:textColorHint="#50FFFFFF"
            android:layout_marginStart="30dp"
            android:background="#70D1CFCF"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookTicket"
            android:text="BOOK TICKET"
            android:textColor="@color/white"
            android:layout_below="@id/layer6"
            android:layout_marginTop="100dp"
            android:background="@color/black"
            android:padding="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
</RelativeLayout>